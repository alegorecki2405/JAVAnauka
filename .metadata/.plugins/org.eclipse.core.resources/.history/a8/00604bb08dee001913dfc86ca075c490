package naukajavy;

public class Zadanie4 {
	static int obwod(int a,int b,int c) {
		int obwod = a+b+c;
		return obwod;
	}
	static boolean czy_prostokatny(int a,int b,int c) {
		
		if(a*a+b*b==c*c) {
			return true;
		}
		return false;
	}
	public static void main(String[] args) {
		int a,b,c;
		a=10;
		b=11;
		c=22;
		
		System.out.println(obwod(a,b,c));
		
		czy_prostokatny(a,b,c);
		

	}

}
